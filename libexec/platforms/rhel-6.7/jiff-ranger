#!/usr/bin/env bash
# Usage: jiff ranger
# Summary: Install ranger file manager

source basiclib

strict_mode_on

exit_if_is_on_path ranger
mkdir -p "${HOME}/tmp"
push_dir "${HOME}/tmp"
wget https://downloads.accns.com/ranger/ranger-1.6.1.tar.gz
tar xzf ranger-1.6.1.tar.gz
cd ranger-1.6.1
sudo make install
cd ..
sudo rm -rf ranger-1.6.1
rm ranger-1.6.1.tar.gz
pop_dir
