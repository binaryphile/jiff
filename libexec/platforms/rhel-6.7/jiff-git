#!/usr/bin/env bash
# Usage: jiff git
# Summary: Install git 2

source basiclib

strict_mode_on

exit_if_is_on_path git
read -d "" -a prereqs <<EOM
gcc
curl-devel
expat-devel
gettext-devel
openssl-devel
perl-devel
zlib-devel
EOM
for prereq in "${prereqs[@]}"; do
  jiff install "${prereq}"
done
mkdir -p "${HOME}/tmp"
push_dir "${HOME}/tmp"
wget https://downloads.accns.com/git/git-2.7.0.tar.gz
tar xzf git-2.7.0.tar.gz
cd git-2.7.0
make configure
./configure --prefix=/usr
make all
sudo make install
cd ..
rm -rf git-2.7.0
rm git-2.7.0.tar.gz
pop_dir
