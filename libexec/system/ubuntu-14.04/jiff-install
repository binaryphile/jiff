#!/usr/bin/env bash
# Usage: jiff install [package]
# Summary: Install and configure a system package

source basics
source ubuntu

strict_mode_on

install () {
  local package

  package="${1}"
  exit_if_package_is_installed "${package}"
  update_apt
  install_package "${package}"
}

case "${1}" in
"ranger" )
  install "${package}"
  ;;
* )
  echo "Usage: jiff install [package]"
  ;;
esac
